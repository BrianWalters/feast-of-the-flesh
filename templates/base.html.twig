<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>{% block title %}Feast of the Flesh{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('bootstrap-4.0.0-dist/css/bootstrap.min.css') }}">
        {% endblock %}
    </head>
    <header>
        <div class="container">
            <div class="row">
                <div class="col-sm">
                    {% for error in app.session.getFlashBag().get('error') %}
                        <div class="alert alert-danger">
                            {{ error }}
                        </div>
                    {% endfor %}

                    {% for notice in app.session.getFlashBag().get('notice') %}
                        <div class="alert alert-success">
                            {{ notice }}
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </header>
    <body>
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
