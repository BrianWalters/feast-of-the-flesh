{% extends 'base.html.twig' %}

{% block container %}
    <div class="row">
        <div class="col-md-12">
            <p>
                <a href="{{ path('home') }}">Home</a>
            </p>
            <h1>Past movies</h1>
            {% for year, movies in moviesByYear %}
                <h2>{{ year }}</h2>
                <ul>
                    {% for movie in movies %}
                        <li>
                            <a href="{{ path('movie_past_detail', {id: movie.id}) }}">
                                {{ movie.title }}
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            {% endfor %}
        </div>
    </div>
{% endblock %}